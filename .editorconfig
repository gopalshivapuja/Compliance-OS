# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.{py,pyi}]
indent_size = 4
max_line_length = 120

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# HTML/CSS files
[*.{html,css,scss,sass,less}]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 4

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# Python requirements files
[requirements*.txt]
indent_size = 0
