# Compliance OS Backend - Production Environment
# ================================================
# IMPORTANT: Never commit actual .env files to version control!
# Copy this file to .env.production and update with your production values.

# Application
ENV=production
DEBUG=false
APP_NAME="Compliance OS"
APP_VERSION="1.0.0"

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
JWT_SECRET_KEY=your-production-jwt-secret-key-change-this-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:your-strong-password@your-db-host:5432/compliance_os_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://:your-redis-password@your-redis-host:6379/0
REDIS_POOL_SIZE=10

# AWS S3 (Evidence Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=compliance-os-evidence-prod
AWS_REGION=ap-south-1

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME="Compliance OS"

# Slack (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Celery
CELERY_BROKER_URL=redis://:your-redis-password@your-redis-host:6379/1
CELERY_RESULT_BACKEND=redis://:your-redis-password@your-redis-host:6379/2
CELERY_TASK_ALWAYS_EAGER=false

# CORS
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# India Data Residency
# Ensure DATABASE_URL, REDIS_URL, and AWS_REGION use Mumbai region (ap-south-1)
