# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/compliance_os
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security & Authentication
JWT_SECRET_KEY=your-secret-key-here-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS S3 Configuration (Evidence Storage)
# Must use Mumbai region (ap-south-1) for India data residency
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET_NAME=compliance-os-evidence
AWS_REGION=ap-south-1

# Email Service (Optional for V1)
# Using SendGrid for transactional emails
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@compliance-os.com

# Slack Integration (Optional for V1)
# For compliance reminders and notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
