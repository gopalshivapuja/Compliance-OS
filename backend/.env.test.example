# Compliance OS Backend - Test Environment
# =========================================
# Copy this file to .env.test for running tests

# Application
ENV=test
DEBUG=true
APP_NAME="Compliance OS Test"

# Server
HOST=127.0.0.1
PORT=8001

# Security (use weak keys for testing)
JWT_SECRET_KEY=test-jwt-secret-key-for-testing-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (PostgreSQL - Test Database)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/compliance_os_test
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=2

# Redis (Test Instance)
REDIS_URL=redis://localhost:6379/15
REDIS_POOL_SIZE=5

# AWS S3 (Mock or Test Bucket)
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_S3_BUCKET_NAME=compliance-os-test
AWS_REGION=ap-south-1

# Email (Disabled in tests)
SENDGRID_API_KEY=test-sendgrid-key
SENDGRID_FROM_EMAIL=test@example.com
SENDGRID_FROM_NAME="Compliance OS Test"

# Celery (Eager mode for tests)
CELERY_BROKER_URL=redis://localhost:6379/14
CELERY_RESULT_BACKEND=redis://localhost:6379/13
CELERY_TASK_ALWAYS_EAGER=true

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Logging
LOG_LEVEL=DEBUG
